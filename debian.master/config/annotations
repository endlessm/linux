# Ensure DEPRECATED options are off.
set +all ?flag DEPRECATED !mark annotated ?type bool		= n
set +all ?flag DEPRECATED !mark annotated ?type tristate	= n

# Ensure DANGEROUS things are turned off.
set +all ?flag DANGEROUS = n
